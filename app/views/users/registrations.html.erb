<div class="container">
  <div class="list-users">
    <h2>All Users</h2>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>IP detected</th>
          <th>Email</th>
          <th>City</th>
          <th>Time and Date of signup</th>
          <th>Browser</th>
          <th>Referrals</th>
          <th>Confirmed?</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each_with_index do |user, index| %>
          <tr>
            <td><%= index + 1 + ((params[:page] || 1).to_i - 1) * 20 %></td>
            <td><%= user.ip_detected_location %></td>
            <td><%= user.email %></td>
            <td><%= user.city %></td>
            <td><%= user.created_at %></td>
            <td><%= user.browser %></td>
            <td><%= user.referrals || 0 %></td>
            <td><%= user.confirmed? %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @users %>
  </div>
</div>